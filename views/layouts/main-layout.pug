doctype html
html(lang="en")
    head
        include ../partials/header
    body 
        header.barra 
            a(href="/") 
                h1 UpTask - Project Manager
            a(href="#") Logout
        main.contenedor 
            aside.contenedor-proyectos 
                .panel.crear-proyecto
                    a.boton(href="/new-project") New Project
                        span +

                .panel.lista-proyectos
                    h2 Projects
                    ul#proyectos.proyectos 
                        if projects.length
                            each project in projects
                                li 
                                    a(href=`/projects/${project.url}`) #{project.name}

            block content

        script(src="/dist/bundle.js") 