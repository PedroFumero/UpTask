doctype html
html(lang="en")
    head
        include ../partials/header
    body
        header.barra
            a(href="/") 
                h1 UpTask - Project Management
            a(href="/logout") Log out

        main.contenedor
            aside.contenedor-proyectos 
                .panel.crear-proyecto
                    a(href="/new-project" class="boton") New Project
                        span +

                .panel.lista-proyectos 
                    h2 Projects
                    ul#proyectos.proyectos 
                        if projects
                            for project in projects
                                li
                                    a(href=`/projects/${project.url}`)= project.name

            block content
            //- pre= vardump(projects)
        
        script(src="/dist/bundle.js") 