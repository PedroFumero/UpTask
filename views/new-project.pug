extends layouts/main-layout

block content
    .contenido-principal 
        h1 #{title}

        if errors
            each error in errors
                .alerta.error #{error.text}

        form.agregar-proyecto(action="/new-project" method="POST")
            .campo
                label(for="name") Project's name: 
                input#name(type="text" name="name" placeholder="Project's name")
            .campo.enviar
                input.boton(type="submit", value="Add")