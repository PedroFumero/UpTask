extends layouts/layout

block content 
    .contenido-principal 
        h1 #{pageName}

        if errors
            each error in errors
                .alerta.error #{error.text}


        form(class="agregar-proyecto" action="/new-project" method="POST") 
            .campo
                label(for="name") Project name:
                input(type="text", name="name" id="name" placeholder="Project name")
            .campo.enviar 
                input(type="submit", value="Add" class="boton")